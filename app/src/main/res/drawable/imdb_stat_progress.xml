<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="270"
    android:toDegrees="270">
    <shape
        android:innerRadius="@dimen/progress_size"
        android:shape="ring"
        android:thickness="@dimen/progress_thick"
        android:useLevel="true">
        <gradient
            android:centerColor="@color/medium_orange"
            android:centerX="0.3"
            android:endColor="@color/light_orange"
            android:startColor="@color/bold_orange"
            android:type="sweep" />
    </shape>
</rotate>
